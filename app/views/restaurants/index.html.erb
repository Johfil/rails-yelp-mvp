<div class="container">
  <div class="d-flex justify-content-center border-bottom  bg-dark text-white mt-1">
    <h1>Restaurants list</h1>
  </div>

  <div class="row row-cols-1 row-cols-md-4 g-4 mt-1">
    <% @restaurants.each do |restaurant| %>
      <div class="col">
        <div class="card fs-6s text-white bg-dark" style="height: 100%;">
          <div class="card-body text-center">
            <h5 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant), class: "text-white text-decoration-none" %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-3">
    <a href="<%= new_restaurant_path %>" class="btn btn-danger">New restaurant</a>
  </div>
</div>
