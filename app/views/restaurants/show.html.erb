<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="mb-2 text-white bg-dark text-center mt-1 p-3">
        <h2><strong><%= @restaurant.name %></strong></h2>
      </div>
      <div class="bg-dark text-white p-3 mb-2">
        <p><strong>Address:</strong> <%= @restaurant.address %></p>
        <p><strong>Phone number:</strong> <%= @restaurant.phone_number %></p>
        <p><strong>Category:</strong> <%= @restaurant.category %></p>
      </div>

      <!-- Move the Reviews section below -->
      <div class="d-flex justify-content-center mb-2 text-white bg-dark p-3">
        <h2>Reviews:</h2>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="card text-white bg-dark mt-1 mb-2 p-3">
            <% @restaurant.reviews.each do |review| %>
              <p><strong>Content:</strong> <%= review.content %></p>
              <p><strong>Rating:</strong> <%= review.rating %></p>
              <hr>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Right column for Add a review form -->
    <div class="col-md-6 h-100">
      <div class="mb-2 text-white bg-dark text-center mb-2 mt-1 p-3 h-100">
        <h1>Add a review</h1>
      </div>
      <div class="row h-100">
        <div class="col-md-12 h-100">
          <div class="text-white bg-dark p-3 h-100">
            <%= simple_form_for([@restaurant, @review]) do |f| %>
              <div class="mb-2">
                <%= f.input :content, input_html: { class: 'form-control bg-gray-400 text-dark' } %>
              </div>
              <div class="mb-2">
                <%= f.input :rating, input_html: { class: 'form-control bg-gray-400 text-dark' } %>
              </div>
              <div class="mb-2 d-flex justify-content-center">
                <%= f.submit 'Submit', class: 'btn btn-info' %>
              </div>
            <% end %>

          </div>
        </div>
                      <div class="d-flex justify-content-center mb-2 mt-2">
    <%= link_to "Back home", restaurants_path, class: "btn btn-danger" %>
  </div>
      </div>
    </div>
  </div>

  <!-- Back home button at the top-right corner -->

</div>
